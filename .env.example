# Environment variables for the Applyish v2 project

# Database
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/coaches/app"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/coaches/app"

# AWS Lightsail Configuration
# AWS Region where Lightsail instances will be created (e.g., us-east-1)
AWS_REGION="us-east-1"
# Specific availability zone within the region (e.g., us-east-1a)
AWS_AVAILABILITY_ZONE="us-east-1a"
# Name of the Lightsail instance snapshot (image ID) to use for creating new instances
LIGHTSAIL_SNAPSHOT_NAME="your-lightsail-snapshot-name"
# Bundle ID for the Lightsail instance (e.g., nano_2_0, micro_2_0)
# Determines instance specifications (CPU, RAM, storage)
LIGHTSAIL_BUNDLE_ID="nano_2_0"

# JWT Secret for token signing and verification
# This should be a strong, random string.
JWT_SECRET="your_jwt_secret_key"

# API URL for the automation to call back to
NEXT_PUBLIC_API_URL="https://www.applyish.com/api"

# Automation Configuration
# Google API Key, if used by the automation
GOOGLE_API_KEY=""
# Numeric value, likely related to the automation's behavior before termination
MAX_BEFORE_KILL="3"
# API key for OpenAI, if used by the automation
OPEN_AI_KEY=""
# The specific LLM model to use (e.g., gpt-4o)
LLM_MODEL="gpt-4o"
# Token for BetterStack, likely for logging or monitoring
BETTERSTACK_TOKEN=""
# A string identifier for the run, defaults to "STAGE_x"
RUN_ID="STAGE_x"

# AWS Credentials (if not using IAM roles or AWS CLI configuration)
# AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
# AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
# AWS_SESSION_TOKEN="YOUR_AWS_SESSION_TOKEN" # Only if using temporary credentials
